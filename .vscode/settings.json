// Place your settings in this file to overwrite default and user settings.
{
  "files.insertFinalNewline": true,
  "tslint.enable": true,
  "tslint.configFile": "./client/.config/tslint.config.js",
  "tslint.autoFixOnSave": true,
  "stylelint.enable": true,
  "scss.validate": false,
  "postcssSorting": "./client/.config/postcss.sorting.js",
  "stylefmt.config": "./client/.config/stylelint.config.js",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "docthis.includeMemberOfOnInterfaceMembers": false,
  "docthis.includeMemberOfOnClassMembers": false,
  "html.format.wrapAttributes": "force",
  "search.exclude": {
    "**/node_modules": true,
    "dist": true
  },
  "editor.formatOnSave": true,
  "typescriptHero.resolver.importGroups": [
    "Plains",
    "Modules",
    "/module|resolver|service/",
    "Workspace"
  ]
}
